<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<GridPane style="-fx-background-color: #1a1a1a;" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.GuiController">
   <children>
       <GridPane>
           <children>
               <TextField fx:id="url" onMouseClicked="#highlightText" prefWidth="518.0" promptText="Enter Youtube video url or id to add video" text="Youtube Video URL or ID" GridPane.columnIndex="0">
               <GridPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </GridPane.margin></TextField>
            <Button id="addBtn" fx:id="add" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" text="Add Video" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />
           </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
       </GridPane>
      <GridPane alignment="center" GridPane.rowIndex="1">
         <children>
             <WebView fx:id="video" disable="true" maxHeight="315.0" maxWidth="560.0" onMouseClicked="#togglePauseVideo" prefHeight="315.0" prefWidth="560.0" GridPane.rowIndex="1" />
             <Button maxHeight="315.0" maxWidth="560.0" mnemonicParsing="false" onAction="#togglePauseVideo" prefHeight="315.0" prefWidth="560.0" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin></Button>
             <Slider fx:id="timeLine" onMouseClicked="#startTimelineSeek" onMousePressed="#startTimelineSeek" onMouseReleased="#endTimelineSeek" GridPane.rowIndex="2" />
             <ButtonBar buttonMinWidth="32" GridPane.rowIndex="3">
                 <buttons>
                     <Button fx:id="prev" contentDisplay="GRAPHIC_ONLY" maxWidth="32.0" mnemonicParsing="false" onAction="#prevVideo" ButtonBar.buttonData="LEFT" />
                     <Button fx:id="play" contentDisplay="GRAPHIC_ONLY" maxWidth="32.0" mnemonicParsing="false" onAction="#togglePauseVideo" ButtonBar.buttonData="LEFT" />
                     <Button fx:id="forw" contentDisplay="GRAPHIC_ONLY" maxWidth="32.0" mnemonicParsing="false" onAction="#nextVideo" ButtonBar.buttonData="LEFT" />
                     <Button fx:id="mute" contentDisplay="GRAPHIC_ONLY" maxWidth="32.0" mnemonicParsing="false" onAction="#toggleMuteVideo" />
                     <Slider fx:id="volume" prefWidth="75.0" value="100.0" />
                 </buttons>
            </ButtonBar>
         </children>
         <columnConstraints>
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
